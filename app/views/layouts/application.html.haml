!!! Strict
%html
  %head
    %title
      TOLA - Tom Lambert - Illustration &amp; Graphic Design
    = stylesheet_link_tag 'application', :cache => false
    = javascript_include_tag :defaults, :cache => true
  %body
    #header
      %h1.title<
        = link_to 'TOLA', root_path, :title => 'Tom Lambert'
      %h2.strap<
        Illustration &amp; Graphic Design
      %p.telephone<
        +44 (0) 7807 401066
      %p.email<
        = mail_to 'hello@tomlambert.me', 'hello at tomlambert.me', :encode => :javascript
        
      %ul.menu
        %li.about<
          = link_to 'About', about_path
        %li.work<
          = link_to 'Work', images_path
        %li.blog<
          = link_to 'Blog', posts_path
        %li.contact<
          = link_to 'Contact', new_contact_path
          
      - if @latest_tweets
        .twitter
          %h2 Latest Tweet
          - @latest_tweets.to_a.each do |tweet|
            %p.tweet= tweet.text
            %p.meta
              by
              = link_to tweet.from_user, "http://www.twitter.com/#{tweet.from_user}"
              at
              = tweet.created_at.to_date.strftime("%d/%m/%Y at %I:%M%p").downcase
    
    #content
      = yield